{
  "name": "eslint-plugin-nodejs-internal",
  "version": "1.0.0",
  "description": "ESLint plugin and config for Node.js core",
  "author": "NodeJS Linting Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nodejs/eslint-plugin-nodejs-internal.git"
  },
  "main": "index.js",
  "keywords": [
    "eslint",
    "eslint-plugin",
    "eslint-config",
    "node.js",
    "node",
    "internal"
  ],
  "scripts": {
    "lint": "eslint --env node --ignore-pattern tmp/ --config test/core-config.json .",
    "test": "eslint --max-warnings=0 --report-unused-disable-directives --cache --config test/core-config.json --ignore-path tmp/.eslintignore --no-eslintrc tmp/.eslintrc.js tmp/benchmark tmp/doc tmp/lib tmp/test tmp/tools"
  },
  "engines": {
    "node": "14.x || 16.x || >=18.0.0" 
  },
  "peerDependencies": {
    "eslint": ">=6"
  },
  "dependencies": {
    "@babel/core": "^7.16.7",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/plugin-syntax-class-properties": "^7.12.13",
    "@babel/plugin-syntax-import-assertions": "^7.16.7",
    "@babel/plugin-syntax-top-level-await": "^7.14.5",
    "eslint-plugin-jsdoc": "^37.6.1",
    "eslint-plugin-markdown": "^2.2.1"
  },
  "devDependencies": {
    "eslint": "^8.6.0",
    "eslint-plugin-nodejs-internal": "file:./"
  }
}
